# OtakuVerse Environment Variables

# =======================
# API Configuration
# =======================
API_HOST=127.0.0.1
API_PORT=8001
API_DEBUG=False

# =======================
# Database Configuration
# =======================
DATABASE_PATH=./otakuverse.db
DATABASE_TYPE=sqlite

# =======================
# AI Model Configuration
# =======================
# Google Gemini API Key (get from https://ai.google.dev/)
GOOGLE_API_KEY=your_google_api_key_here

# Model selection
AI_MODEL=gemini-2.5-flash
MODEL_TEMPERATURE=0.7
MODEL_TOP_K=40
MODEL_TOP_P=0.95

# =======================
# Frontend Configuration
# =======================
# Backend URL for frontend API calls
VITE_API_URL=http://127.0.0.1:8001

# =======================
# External APIs
# =======================
# MyAnimeList API (optional, for anime enrichment)
MAL_API_KEY=your_mal_api_key_here

# OMDb API (optional, for movie enrichment)
OMDB_API_KEY=your_omdb_api_key_here

# =======================
# Logging Configuration
# =======================
LOG_LEVEL=INFO
LOG_FILE=./logs/otakuverse.log

# =======================
# Cache Configuration
# =======================
CACHE_ENABLED=True
CACHE_TTL=3600  # 1 hour in seconds

# =======================
# CORS Configuration
# =======================
CORS_ORIGINS=http://localhost:3001,http://127.0.0.1:3001,http://localhost:3000

# =======================
# Session Configuration
# =======================
SESSION_TIMEOUT=1800  # 30 minutes in seconds
MAX_RECOMMENDATIONS=50
